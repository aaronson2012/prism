# Prism Discord Bot Configuration

# ============================================================================
# REQUIRED: Discord Bot Configuration
# ============================================================================

# Discord bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# OpenRouter API key from https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here


# ============================================================================
# OPTIONAL: AI Model Configuration
# ============================================================================

# Default AI model to use for responses
# Default: google/gemini-2.5-flash
DEFAULT_MODEL=google/gemini-2.5-flash

# Fallback model if primary model fails
# Default: google/gemini-2.5-flash-lite
FALLBACK_MODEL=google/gemini-2.5-flash-lite

# OpenRouter site URL for analytics/tracking (optional)
OPENROUTER_SITE_URL=

# OpenRouter app name for analytics/tracking (optional)
OPENROUTER_APP_NAME=


# ============================================================================
# OPTIONAL: Database Configuration
# ============================================================================

# Path to SQLite database file
# Default: data/prism.db
PRISM_DB_PATH=data/prism.db


# ============================================================================
# OPTIONAL: Logging Configuration
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Discord.py library log level
# Default: INFO
DISCORD_LOG_LEVEL=INFO

# Directory for log files (auto-detected if not set)
# Default: auto-selects from: ./logs, $XDG_STATE_HOME/prism/logs, ~/.local/state/prism/logs
PRISM_LOG_DIR=

# Log format string (Python logging format)
# Default: "%(asctime)s %(levelname)s %(name)s: %(message)s"
PRISM_LOG_FORMAT=%(asctime)s %(levelname)s %(name)s: %(message)s

# Log date format
# Default: "%Y-%m-%d %H:%M:%S"
PRISM_LOG_DATEFMT=%Y-%m-%d %H:%M:%S

# Log retention in days
LOG_RETENTION_DAYS=14
ERROR_LOG_RETENTION_DAYS=90
DISCORD_LOG_RETENTION_DAYS=14
CONSOLE_LOG_RETENTION_DAYS=14


# ============================================================================
# OPTIONAL: Discord Bot Features
# ============================================================================

# Enable/disable message content intent (required for bot to read messages)
# Default: true
INTENTS_MESSAGE_CONTENT=true

# Enable/disable emoji talk feature (bot adds emojis to responses)
# Default: true
EMOJI_TALK_ENABLED=true

# Enable/disable emoji reactions (bot reacts to user messages)
# Default: false
EMOJI_REACTIONS_ENABLED=false


# ============================================================================
# OPTIONAL: Command Registration
# ============================================================================

# Comma-separated list of guild IDs for fast command registration
# If empty, commands register globally (slower, takes up to 1 hour)
# Example: COMMAND_GUILD_IDS=123456789,987654321
COMMAND_GUILD_IDS=

